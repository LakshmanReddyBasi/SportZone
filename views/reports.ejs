<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reports</title>
    <style>
        :root {
            --primary: #ff0000;
            --secondary: #000000;
            --gradient: linear-gradient(45deg, #ff0000, #800000);
            --surface: #121212;
            --background: #000000;
            --text-primary: #ffffff;
            --text-secondary: #888888;
            --border: rgba(255, 255, 255, 0.2);
            --shadow: rgba(255, 255, 255, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: var(--background);
            color: var(--text-primary);
            line-height: 1.5;
        }

        header {
            background: var(--gradient);
            color: white;
            padding: 1.5rem 0;
            box-shadow: 0 2px 12px var(--shadow);
            margin-bottom: 2rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .section {
            margin-bottom: 3rem;
            background: var(--surface);
            border-radius: 1rem;
            box-shadow: 0 4px 12px var(--shadow);
            overflow: hidden;
        }

        .section-header {
            padding: 1.5rem;
            background: var(--gradient);
            color: white;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .table-container {
            overflow-x: auto;
            background: var(--surface);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            background: rgba(255, 255, 255, 0.05);
            font-weight: 600;
            text-align: left;
            padding: 1rem;
            color: var(--text-primary);
            border-bottom: 2px solid var(--border);
        }

        td {
            padding: 1rem;
            border-bottom: 1px solid var(--border);
            transition: background 0.3s ease;
        }

        tr:hover td {
            background: rgba(255, 0, 0, 0.05);
        }

        .stat-card {
            background: var(--surface);
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 2px 8px var(--shadow);
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-4px);
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        @media (max-width: 768px) {
            .container {
                padding: 0 1rem;
            }

            .page-title {
                font-size: 1.5rem;
            }

            .section-title {
                font-size: 1.125rem;
            }

            th, td {
                padding: 0.75rem;
            }

            .stat-card {
                padding: 1rem;
            }

            .stat-value {
                font-size: 1.5rem;
            }
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--background);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--gradient);
            border-radius: 4px;
        }

        /* Animation for gradient background */
        @keyframes gradientFlow {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .gradient-bg {
            background: var(--gradient);
            background-size: 200% 200%;
            animation: gradientFlow 15s ease infinite;
        }
    </style>
</head>
<body>
    <header class="gradient-bg">
        <div class="container">
            <h1 class="page-title">Reports</h1>
        </div>
    </header>

    <main class="container">
        <section class="section">
            <div class="section-header">
                <h2 class="section-title">Session Details</h2>
            </div>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Sport</th>
                            <th>Teams</th>
                            <th>Date</th>
                            <th>Venue</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sessions.forEach(session => { %>
                            <tr>
                                <td><%= session.sport_name %></td>
                                <td><%= session.team1 %> vs <%= session.team2 %></td>
                                <td><%= session.date %></td>
                                <td><%= session.venue %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>

        <section class="section">
            <div class="section-header">
                <h2 class="section-title">Sport Popularity</h2>
            </div>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Sport</th>
                            <th>Number of Sessions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% popularity.forEach(sport => { %>
                            <tr>
                                <td><%= sport.name %></td>
                                <td><%= sport.count %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</body>
</html>
